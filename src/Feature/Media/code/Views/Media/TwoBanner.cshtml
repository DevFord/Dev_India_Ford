@model IEnumerable<FordIndia.Feature.Media.Models.TwoBanner>
@using FordIndia.Feature.Media;
@using FordIndia.Feature.Media.Models;

@if(Model != null)
{
    <!--[Latest-at-ford]-->
    <section class="sec-latest relative">
       
            <header class="title-head absolute text-white text-center mt-4 mw-100">
                <h2 class="title">@Sitecore.Globalization.Translate.Text("LatestFord")</h2>
            </header>
            <div class="latest-carousel owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="slide-item">
                        <a href="#">
                            <picture>
                                <source srcset="@item.MediaImage" media="(min-width: 768px)">
                                <img src="@item.MobileImage">
                            </picture>
                        </a>
                    </div>
                }


            </div>
        
        
    </section>
    <!--[/Latest-at-ford]-->
}

