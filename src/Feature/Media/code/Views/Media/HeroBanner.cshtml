@model FordIndia.Feature.Media.Models.HeroBanner
<!--[Hero-Banner]-->
@if (Model != null)
{
   
    
        <section class="hero-banner">
            <picture class="hero-banner-img">
                <source srcset="@Model.MediaImage" media="(min-width: 576px)">
                <img src="@Model.MobileImage" alt="">
            </picture>
            <div class="hero-banner-caption text-white d-flex align-items-center text-center p-4">
                <div class="rich-text w-100">
                    <h1 class="hero-banner-title ">@Model.MediaTitle</h1>
                </div>
            </div>
            @*<nav aria-label="breadcrumb" class="banner-breadcrumb text-center">
                <ol class="breadcrumb justify-content-center align-items-center">
                    <li class="breadcrumb-item breadcrumb-home"><a href="@Model.Link" class="d-flex align-items-center"><img src="@Model.Image" alt=""><span class="dots"></span><span class="dots"></span><span class="dots"></span></a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>*@
        </section>    
}
